package shaders
//kage:unit pixels

var CellSize float
var LineWidth float
var LineColor vec4

func Fragment(pos vec4, local vec2, _col vec4) vec4 {
    if local.x <= LineWidth || local.y <= LineWidth {
        return vec4(0)
    }

    fx := mod(local.x, CellSize)
    fy := mod(local.y, CellSize)

    if fx < LineWidth || fy < LineWidth {
        return LineColor
    }

    return vec4(0)
}
